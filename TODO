# class Executable
# 
#   def self.result(text, &block)
#     [text, block]
#   end
# end
# 
# describe Executable do
#   verify_executable "calls on failure" do
#     Executable.result("received") do |result|
#       puts result
#     end
#   end
# end
# 

+      def verify_executable(executable, options = {})
+
+        description, on_failure_block = executable
+
+        origin = caller
+        specify(description) do
+          approval = Approval.new(example, yield, options)
+
+          # We may be able to set file_path and
+          # line_number on example in the approval
+          # see RSpec::Core::Metadata::LocationKeys
+          approval.location = origin
+
+          approval.verify
+        end
+      end
+

